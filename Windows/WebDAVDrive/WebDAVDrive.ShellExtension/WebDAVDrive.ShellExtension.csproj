<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0-windows10.0.18362.0</TargetFramework>
    <CsWinRTWindowsMetadata>10.0.18362.0</CsWinRTWindowsMetadata>
    <EnableComHosting>True</EnableComHosting>
    <Platforms>x64</Platforms>
    <ApplicationIcon />
    <OutputType>WinExe</OutputType>
    <StartupObject />
    <Product>WebDAV Drive</Product>
    <Company>IT HIT LTD.</Company>
    <Authors>IT HIT LTD.</Authors>
    <Copyright>IT HIT LTD.</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="..\WebDAVDrive\Images\Locked.ico" Link="Locked.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="..\WebDAVDrive\Images\Unlocked.ico" Link="Unlocked.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\WebDAVDrive\appsettings.json" Link="appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="6.0.0" />
    <PackageReference Include="System.Drawing.Common" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Common\ShellExtension\Common.Windows.ShellExtension.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="log4net.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
