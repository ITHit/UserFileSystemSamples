<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:generic="using:System.Collections.Generic">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>


    <Style x:Name="CompareMainGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Padding" Value="20" />
    </Style>

    <Style x:Name="CompareMainStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Padding" Value="5" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style x:Name="CompareLabelsContainerGridStyle" TargetType="Grid">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style x:Name="CompareLabelsStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Margin" Value="20,0,20,0" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style x:Name="CompareTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>

    <Style x:Name="CompareLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource CompareTextBlockStyle}">
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style x:Name="CompareBoldTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource CompareTextBlockStyle}" >
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,20,0,0" />
    </Style>
</ResourceDictionary>
