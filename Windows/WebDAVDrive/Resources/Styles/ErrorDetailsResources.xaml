<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:generic="using:System.Collections.Generic">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Name="ErrorDetailsMainStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Padding" Value="5" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style x:Name="ErrorDetailsHistoryHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="40" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,15,0,15" />
        <Setter Property="Visibility" Value="Collapsed" />
    </Style>

    <Style x:Name="ErrorDetailsLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource ErrorDetailsHistoryHeaderStyle}">
        <Setter Property="Margin" Value="0,0,0,15" />
        <Setter Property="Visibility" Value="Visible" />
    </Style>
</ResourceDictionary>
