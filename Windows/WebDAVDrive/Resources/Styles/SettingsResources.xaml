<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:generic="using:System.Collections.Generic">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Name="SettingsMainGridStyle" TargetType="Grid">
        <Setter Property="Padding" Value="20" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Background" Value="{StaticResource SettingsBackgroundBrush}" />
    </Style>

    <Style x:Name="SettingsMainStackPanelStyle" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Width" Value="600" />
    </Style>


    <Style x:Name="SettingsErrorStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Red" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Visibility" Value="Collapsed" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,3,0,0" />
    </Style>

    <Style x:Name="SettingsTextBlockStyle" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style x:Name="SettingsDescriptionStyle" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,0,40,0" />
        <Setter Property="Foreground" Value="{StaticResource SettingsDescriptionBrush}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextWrapping" Value="WrapWholeWords" />
    </Style>

    <Style x:Name="SettingsToggleStyle" TargetType="ToggleSwitch">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style x:Name="SettingsTextBoxStyle" TargetType="TextBox">
        <Setter Property="Margin" Value="0" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style x:Name="SettingsGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="0,4,0,4" />
        <Setter Property="Background" Value="{StaticResource SettingsBlockBackgroundBrush}" />
        <Setter Property="CornerRadius" Value="2" />
        <Setter Property="BorderBrush" Value="{StaticResource SettingsBlockBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="15" />
    </Style>

    <Style x:Name="SettingsStackPanel" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical" />
    </Style>

    <Style x:Name="SettingsStackPanelWithTextBox" TargetType="StackPanel" BasedOn="{StaticResource SettingsStackPanel}">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>